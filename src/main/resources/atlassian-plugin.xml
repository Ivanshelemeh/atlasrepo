<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="shelePlugin"/>


    <!-- add our web resources -->
    <web-resource key="shelePlugin-resources" name="shelePlugin Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <dependency>com.atlassian.auiplugin:aui-select</dependency>
        <dependency>com.atlassian.auiplugin:aui-dialog2</dependency>

        <resource type="download" name="shelePlugin.css" location="/css/shelePlugin.css"/>
        <resource type="download" name="shelePlugin.js" location="/js/shelePlugin.js"/>
        <resource type="download" name="images/" location="/images"/>
        <context>atl.admin</context>
    </web-resource>
    <web-section key="my-section" name="My Item Web Section" i18-name-key="Sheleuniq1.name"
                 location="admin_plugins_menu" weight="110">
    </web-section>
    <web-item key="my-web-item" name="Button" i18-name-key="my-web-item.name" section="jira.project.sidebar.navigation"
              weight="10">
        <description>This simple Button</description>
        <label key="my-web-item.label"/>
        <link linkId="my-web-item.linkId">/secure/MywebWorkAction!default.jspa?selectedItem=$pathEncodedProjectKey
        </link>
    </web-item>
    <web-item key="my-next-item" name="LeadButton" i18-name-key="my-next-item.name"
              section="admin_plugins_menu/my-section" weight="20">
        <description>Lead Button</description>
        <label key="my-next-item.label"/>
        <link linkId="my-next-item-link">/secure/SelectAction.jspa</link>
    </web-item>
    <webwork1 key="my-webwork" name="My WebWorkAtlas" class="java.lang.Object" roles-required="sysadmin">
        <description key="my-webwork.description">Simple webwork module</description>
        <actions>
            <action name="com.atlassian.shele.shelePlugin.webwork.MywebWorkAction" alias="MywebWorkAction"
                    roles-required="sysadmin">
                <view name="success">/template/success.vm</view>
                <view name="error">/template/error.vm</view>
            </action>
            <action name="com.atlassian.shele.shelePlugin.webwork.SelectAction" alias="SelectAction"
                    roles-required="sysadmin">
                <view name="select">/template/select.vm</view>
                <view name="error_select">/template/error_select.vm</view>
            </action>
        </actions>
    </webwork1>
    <webwork1 key="mail-edit-webwork" name="Mail Edit Webwork" class="java.lang.Object" roles-required="sysadmin">
        <description key="mail-edit-webwork.description">Web work for configuration mail handler</description>
        <actions>
            <action name="com.atlassian.shele.shelePlugin.webwork.MailConfigDetailsWebAction"
                    alias="MailConfigDetailsWebAction" roles-required="sysadmin">
                <view name="input">/template/handler-template/config.vm</view>
                <view name="securitybreach">/secure/views/securitybreach.jsp</view>
            </action>
        </actions>
    </webwork1>
    <ao key="ao-module">
        <description>The module configuring the Active Objects service</description>
        <entity>com.atlassian.shele.shelePlugin.ao.IssueEntity</entity>
        <entity>com.atlassian.shele.shelePlugin.ao.ProjectEntity</entity>
    </ao>
    <customfield-type key="simple-custom-field" name="Simple custom field" i18n-name-key="simple-custom-field.name"
                      class="com.atlassian.shele.shelePlugin.customfield.SimpleCustomField">
        <description key="simple-custom-field.description"/>
        <resource type="velocity" name="edit" location="/template/custom-fields/simple-custom-field/edit.vm"/>
        <resource type="velocity" name="view" location="/template/custom-fields/simple-custom-field/view.vm"/>
    </customfield-type>
    <customfield-type key="count-assignee-field" name="Count assignee custom  field"
                      i18n-name-key="count-assignee-field.name"
                      class="com.atlassian.shele.shelePlugin.customfield.CountAssigneeField">
        <description key="count-assignee-field.description"/>
        <resource type="velocity" name="edit" location="/template/custom-fields/count-assignee-field/edit.vm"/>
        <resource type="velocity" name="view" location="/template/custom-fields/count-assignee-field/view.vm"/>
    </customfield-type>
    <listener key="IssueEvent" class="com.atlassian.shele.shelePlugin.liseners.IssueEventListener">
        <description>Will listen issue events</description>
    </listener>
    <rest key="IssueRest" path="/rest-issue" version="1.0">
        <description>Provides hello world services.</description>
    </rest>
    <message-handler i18n-name-key="mailHandler.name" key="mailHandler"
                     class="com.atlassian.shele.shelePlugin.handlers.MailHandler"
                     add-edit-url="/secure/admin/MailConfigDetailsWebAction!default.jspa" weight="0"/>
</atlassian-plugin>